# Repository
repo_name: wuseman/www.nr1.nu
repo_url: https://github.com/wuseman/www.nr1.nu

copyright: |
  Copyright &copy; 2015 - 2022 <a href="https://github.com/wuseman"  target="_blank" rel="noopener">wuseman</a>

# Configuration
theme:
  name: material
  custom_dir: !ENV [THEME_DIR, "material"]
  static_templates:
    - 404.html
  include_search_page: false
  search_index_only: true
  language: en
  features:
    - content.code.annotate
    # - content.tabs.link
    - content.tooltips
    - header.autohide
    #- navigation.expand
    - navigation.indexes
    - navigation.instant
    - navigation.prune
    - navigation.sections
    - navigation.tabs
    # - navigation.tabs.sticky
    - navigation.top
    - navigation.tracking
    - search.highlight
    - search.share
    - search.suggest
    - toc.follow
    # - toc.integrate

  features:
     - content.code.annotate
     - content.tabs.link
     - content.tooltips
    # - header.autohide
    # - navigation.expand
     - navigation.indexes
     - navigation.instant
    # - navigation.prune
    # - navigation.sections
     - navigation.tabs
     - navigation.tabs.sticky
     - navigation.top
     - navigation.tracking
     - search.highlight
     - search.share
     - search.suggest
#     - toc.follow
#     - toc.integrate
  highlightjs: true
  hljs_languages:
    - yaml
    - rust
    - bash
    - console
    - shell
    - python
    - perl
    - tcl 
    - powershell
    - ardunio
    - php
    - json
    - kotlin
  font:
    text: Roboto
    code: Roboto Mono
  favicon: assets/favicon.png
  icon:
    logo: logo
  palette:
    - scheme: dracula
      primary: deep purple
      accent: deep purple
      toggle:
        icon: material/brightness-7
        name: Switch to dark mode
    - scheme: default
      primary: black       # Top Bar
      accent: deep purple              # SWelector
      toggle:
        icon: material/brightness-4
        name: Switch to light mode

plugins:
# https://smarie.github.io/mkdocs-gallery/
